  <files>
    <filename plugin="preachit">preachit.php</filename>
  </files>
  <version>3.5.3</version>
  <description>PLG_PREACHIT_SEARCH_DESCRIPTION</description>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_search_preachit.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_search_preachit.sys.ini</language>
		<language tag="en-US">en-US/en-US.plg_search_preachit.ini</language>
		<language tag="en-US">en-US/en-US.plg_search_preachit.sys.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_search_preachit.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_search_preachit.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_search_preachit.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_search_preachit.sys.ini</language>
	</languages>  
  <config>
  <fields name="params">
  <fieldset name="basic">
    <field name="search_limit" type="text" size="5" default="50" label="PLG_PREACHIT_SEARCH_NO" description="PLG_PREACHIT_SEARCH_NO_DESC"/>
    <field name="itemid" type="menuitem" default="" label="PLG_PREACHIT_SEARCH_MENUID" description="PLG_PREACHIT_SEARCH_MENUID_DESC">
    	<option value="">COM_PREACHIT_ADMIN_DD_NONE</option> 
   	 </field>
   <field name ="linkview" type="list" default="audio" label="PLG_PREACHIT_SEARCH_LINKVIEW" description="PLG_PREACHIT_SEARCH_LINKVIEWDESC">
   <option value="audio">PLG_PREACHIT_SEARCH_AUDIO</option>
   <option value="video">PLG_PREACHIT_SEARCH_VIDEO</option>
   <option value="text">PLG_PREACHIT_SEARCH_TEXT</option>
   </field>
   </fieldset>
  </fields>
  </config>
    <!-- UPDATESERVER DEFINITION -->
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="te-webdesign site">http://te-webdesign.co.uk/update/media/feeds/plg_search_preachit.xml</server>
	</updateservers>
</extension>