<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5" method="upgrade">
  <name>mod_piadmin</name>
  <author>te-webdesign</author>
  <creationDate>May 2011</creationDate>
  <copyright>(C) 2010</copyright>
  <license>GNU/GPL</license>
  <authorEmail>paulkosciecha@googlemail.com</authorEmail>
  <authorUrl>http://joomla.truthengaged.org.uk</authorUrl>
  <version>3.5.1</version>
  <description>MOD_PIADMIN_MODULE_DESCRIPTION</description>
  <files>
	<filename module="mod_piadmin">mod_piadmin.php</filename>
	<filename>mod_piadmin.xml</filename>
	<folder>assets</folder>
  </files>
  <languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_piadmin.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_piadmin.sys.ini</language>
		<language tag="en-US">en-US/en-US.mod_piadmin.ini</language>
		<language tag="en-US">en-US/en-US.mod_piadmin.sys.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_piadmin.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_piadmin.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_piadmin.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_piadmin.sys.ini</language>
	</languages>

  <config>
  <fields name="params">
  <fieldset name="basic">
  <field name="style" type="list" default="default" label="MOD_PIADMIN_DISPLAY" description="MOD_PIADMIN_DISPLAY_DESC">
      <option value="default">MOD_PIADMIN_FLAT</option>
      <option value="bulleted">MOD_PIADMIN_BULLETED</option>
    </field>
    <field name="message" type="radio" default="1" label="MOD_PIADMIN_ADD_MES" description="MOD_PIADMIN_ADD_MES_DESC">
      <option value="1">JYes</option>
      <option value="0">JNo</option>
    </field>
    <field name="teacher" type="radio" default="1" label="MOD_PIADMIN_ADD_TEACH" description="MOD_PIADMIN_ADD_TEACH_DESC">
      <option value="1">JYes</option>
      <option value="0">JNo</option>
    </field>
    <field name="series" type="radio" default="1" label="MOD_PIADMIN_ADD_SERIES" description="MOD_PIADMIN_ADD_SERIES_DESC">
      <option value="1">JYes</option>
      <option value="0">JNo</option>
    </field>
    <field name="podcast" type="radio" default="1" label="MOD_PIADMIN_PUB_POD" description="MOD_PIADMIN_PUB_POD_DESC">
      <option value="1">JYes</option>
      <option value="0">JNo</option>
    </field>
    <field name="moduleclass_sfx" type="text" default="" label="MOD_PIADMIN_MODULE_CLASS_SFX" description="" />
 </fieldset> 
  </fields>
  </config>
  <!-- UPDATESERVER DEFINITION -->
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="te-webdesign site">http://te-webdesign.co.uk/update/media/feeds/mod_piadmin.xml</server>
	</updateservers>
</install>