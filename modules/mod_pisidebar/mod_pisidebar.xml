<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.7" method="upgrade">
  <name>mod_pisidebar</name>
  <author>te-webdesign</author>
  <creationDate>May 2011</creationDate>
  <copyright>Copyright (c) 2010 Truthengaged</copyright>
  <authorEmail>paul@te-webdesign.org.uk</authorEmail>
  <authorUrl>www.truthengaged.org.uk</authorUrl>
  <version>3.5.1</version>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <description>MOD_PISIDEBAR_MODULE_DESCRIPTION</description>
  <files>
    <filename module="mod_pisidebar">mod_pisidebar.php</filename>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <folder>tmpl</folder>
	<folder>assets</folder>
  </files>
  <languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_pisidebar.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_pisidebar.sys.ini</language>
		<language tag="en-US">en-US/en-US.mod_pisidebar.ini</language>
		<language tag="en-US">en-US/en-US.mod_pisidebar.sys.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_pisidebar.ini</language>
		<language tag="es-ES">es-ES/es-ES.mod_pisidebar.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_pisidebar.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_pisidebar.sys.ini</language>
	</languages>
  <config>
  <fields name="params">
  <fieldset name="basic">
  			<field name="spacer1" type="spacer" default="" label="MOD_PISIDEBAR_MODULE_BAR"/>
   <field name="style" type="list" default="xhtml" label="MOD_PISIDE_BAR_MODULE_STYLE" description="MOD_PISIDE_BAR_MODULE_STYLE_DESC">
			<option value="table">MOD_PISIDEBAR_MODULE_STYLE_WRAP_COLUMN</option>
			<option value="horz">MOD_PISIDEBAR_MODULE_STYLE_WRAP_HORIZ</option>
			<option value="xhtml">MOD_PISIDEBAR_MODULE_STYLE_WRAP_DIVS</option>
			<option value="rounded">MOD_PISIDEBAR_MODULE_STYLE_WRAP_MULTI_DIVS</option>
			<option value="none">MOD_PISIDEBAR_MODULE_STYLE_NO_WRAP</option>
			<option value="standard">RT Gantry Standard</option>
		</field>
		<field name="piposition" type="text" size="15" default="pisidebar" label="MOD_PISIDEBAR_MODULE_POSITION" description="MOD_PISIDEBAR_MODULE_POSITION_DESC" />
    <field name="moduleclass_sfx" type="text" default="" label="MOD_PISIDEBAR_MODULE_CLASS_SFX" description="" />
    <field name="css" type="radio" default="1" label="MOD_PISIDEBAR_USE_BUILTIN_CSS" description="MOD_PISIDEBAR_USE_BUILTIN_CSS_DESC">
    		<option value="1">JYes</option>
      	<option value="0">JNo</option>
    	</field> 
   	<field name="spacer2" type="spacer" label="MOD_PISIDEBAR_SERIES_INFO" />  
  <field name="stitle" type="radio" default="0" label="MOD_PISIDEBAR_SERIES_TITLE" description="MOD_PISIDEBAR_SERIES_TITLE_DESC">
  		<option value="1">JYes</option>
      <option value="0">JNo</option>
    </field>
  <field name="sdesc" type="radio" default="1" label="MOD_PISIDEBAR_SERIES_DESCRIPTION" description="MOD_PISIDEBAR_SERIES_DESC">
  		<option value="1">JYes</option>
      <option value="0">JNo</option>
    </field>
  <field name="simage" type="radio" default="0" label="MOD_PISIDEBAR_IMAGE" description="MOD_PISIDEBAR_IMAGE_DESC">
  			<option value="1">JYes</option>
      	<option value="0">JNo</option>
    	</field>
   <field name="spacer3" type="spacer" label="MOD_PISIDEBAR_MESSAGE_INFO" /> 
  <field name="items" type="list" default="0" label="MOD_PISIDEBAR_DISPLAY_NO" description="MOD_PISIDEBAR_DISPLAY_NO_DESC">
	<option value="0">MOD_PISIDEBAR_All</option>   
   <option value="1">1</option>
	<option value="2">2</option>
	<option value="3">3</option>
	<option value="4">4</option>
	<option value="5">5</option>
	<option value="6">6</option>
	<option value="7">7</option>
	<option value="8">8</option>
	<option value="9">9</option>
	<option value="10">10</option>
	<option value="11">11</option>
	<option value="12">12</option>
	<option value="13">13</option>
	<option value="14">14</option>
	<option value="15">15</option>
	<option value="16">16</option>
	<option value="17">17</option>
	<option value="18">18</option>
	<option value="19">19</option>
	<option value="20">20</option></field>
	<field name="orderby" type="list" default="0" label="MOD_PISIDEBAR_ORDER">
      <option value="0">MOD_PISIDEBAR_ORDER_DATE</option>
      <option value="1">MOD_PISIDEBAR_ORDER_DATE_ADDED</option>
      <option value="2">MOD_PISIDEBAR_ORDER_HITS</option>
      <option value="3">MOD_PISIDEBAR_ORDER_DOWNLOADS</option>
    </field>
    <field name="date_format" type="list" default="Use Global" label="MOD_PISIDEBAR_DATE_FORMAT" decription="MOD_PISIDEBAR_DATE_FORMAT_DESC"> 
	<option value="">MOD_PISIDEBAR_DEFAULT</option> 
<option value="Y-m-d">2010-12-25</option> 
<option value="m-d-Y">12-25-2010</option> 
<option value="d-m-Y">25-12-2010</option> 
<option value="M d, Y">Dec 25, 2010</option> 
<option value="D, M d, Y">Sat, Dec 25, 2010</option> 
<option value="M d">Dec 25</option> 
<option value="F d, Y">December 25, 2010</option> 
<option value="l, F d, Y">Saturday, December 25, 2010</option> </field> 
   <field name="namelength" type="text" size="3" maxlength="5" default="" label="MOD_PREACHIT_MODULE_LENGTH" description="MOD_PREACHIT_MODULE_LENGTH_DESC" />
  	<field name="teacher" type="radio" default="1" label="MOD_PISIDEBAR_TEACHER" description="MOD_PISIDEBAR_TEACHER_DESC">
  			<option value="1">JYes</option>
      	<option value="0">JNo</option>
    	</field>
    <field name="scripture" type="radio" default="1" label="MOD_PISIDEBAR_SCRIPTURE" description="MOD_PISIDEBAR_SCRIPTURE_DESC">
    	<option value="1">JYes</option>
      <option value="0">JNo</option>
    </field>
    <field name="date" type="radio" default="1" label="MOD_PISIDEBAR_DATE" description="MOD_PISIDEBAR_DATE_DESC">
    	<option value="1">JYes</option>
      <option value="0">JNo</option>
    </field>
  		<field name="menuid" type="menuitem" default="" label="MOD_PISIDEBAR_MENUID" description="MOD_PISIDEBAR_MENUID_DESC">
  			<option value="">COM_PREACHIT_ADMIN_DD_NONE</option> 
   	 </field>
   </fieldset>  
  </fields>
  </config>
  <!-- UPDATESERVER DEFINITION -->
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="te-webdesign site">http://te-webdesign.co.uk/update/media/feeds/mod_pisidebar.xml</server>
	</updateservers>
</install>
