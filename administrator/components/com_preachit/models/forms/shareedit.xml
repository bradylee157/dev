<?xml version="1.0" encoding="utf-8"?>
	<!--
		Mediaplayer edit XML
	-->
<form>
	<fieldset name="maininfo">
		<field name="id" type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			readonly="true"
			required="true"
		/>
		<field
			name="published"
			type="list"
			label="COM_PREACHIT_ADMIN_STATE"
			class="inputbox"
			size="1"
			default="" validate="options">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
			<option
				value="-2">JTRASH</option>
		</field>
		<field name="name" id="name" type="text" class="inputbox"
			size="100" maxlength="250" label="COM_PREACHIT_ADMIN_NAME" required="true" />
			
		<field name="code" id="code" type="textarea" rows="15" cols="80" 
		label="COM_PREACHIT_ADMIN_CODE" />
		
		<field name="script" id="script" type="text" size="100" maxlength="250" 
		label="COM_PREACHIT_ADMIN_SCRIPT" />
			
	</fieldset>
</form>
