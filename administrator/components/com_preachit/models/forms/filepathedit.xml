<?xml version="1.0" encoding="utf-8"?>
	<!--
		Folder edit XML
	-->
<form>
	<fieldset name="maininfo">
		<field name="id" type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			readonly="true"
		/>
		<field
			name="published"
			type="list"
			label="COM_PREACHIT_ADMIN_STATE"
			description="COM_PREACHIT_FIELD_STATE_DESC"
			class="inputbox"
			size="1"
			default="" validate="options">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
			<option
				value="-2">JTRASH</option>
			</field>
		<field name="name" id="name" type="text" class="inputbox"
			size="40" maxlength="40" label="COM_PREACHIT_ADMIN_NAME" required="true"/>
		
		<field name="server" id="server" type="text" class="inputbox"
			size="100" maxlength="100" label="COM_PREACHIT_ADMIN_SERVER" />
		
		<field name="folder" id="folder" type="text" class="inputbox"
			size="100" maxlength="100" label="COM_PREACHIT_ADMIN_FOLDER" />
			 
		<field name="description" id="description" type="text" class="inputbox"
			size="150" maxlength="200" label="COM_PREACHIT_ADMIN_DESCRIPTION" />
		
		<field
			name="type"
			type="list"
			label="COM_PREACHIT_ADMIN_FILEPATH_TYPE"
			description="COM_PREACHIT_ADMIN_FILEPATH_TYPE_DESC"
			class="inputbox"
			size="1"
			default="" validate="options">
			<option
				value="0">COM_PREACHIT_FTYPE_LOCAL</option>
			<option
				value="1">COM_PREACHIT_FTYPE_3RDPARTY</option>
			<option
				value="2">COM_PREACHIT_FTYPE_3RDPARTY_FTP</option>
			<option
				value="3">COM_PREACHIT_FTYPE_AMAZON</option>
		</field>
	</fieldset>
	<fieldset name="ftptab">
		<field name="ftphost" id="ftphost" type="text" class="inputbox"
			size="50" maxlength="100" label="COM_PREACHIT_ADMIN_FTPHOST" />
		<field name="ftpuser" id="ftpuser" type="text" class="inputbox"
			size="50" maxlength="100" label="COM_PREACHIT_ADMIN_FTPUSER" />
		<field name="ftppassword" id="ftppassword" type="password" class="inputbox"
			size="50" maxlength="100" label="COM_PREACHIT_ADMIN_FTPPASSWORD" />
		<field name="ftpport" id="ftpportword" type="text" class="inputbox"
			size="2" maxlength="3" label="COM_PREACHIT_ADMIN_FTPPORT" />
	</fieldset>
	<fieldset name="awstab">
		<field name="aws_key" id="aws_key" type="text" class="inputbox"
			size="50" maxlength="100" label="COM_PREACHIT_ADMIN_AWSKEY" />
		<field name="aws_secret" id="aws_secret" type="password" class="inputbox"
			size="50" maxlength="100" label="COM_PREACHIT_ADMIN_AWSSECRET" />	
	</fieldset>
</form>
