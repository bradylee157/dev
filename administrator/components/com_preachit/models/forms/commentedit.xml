<?xml version="1.0" encoding="utf-8"?>
	<!--
		Comment edit XML
	-->
<form>
	<fieldset name="maininfo">
		<field name="id" type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			readonly="true"
		/>
		<field
			name="published"
			type="list"
			label="COM_PREACHIT_ADMIN_STATE"
			class="inputbox"
			size="1"
			default="" validate="options">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
			<option
				value="-2">JTRASH</option>
		</field>
		<field name="full_name" type="text"
			label="COM_PREACHIT_ADMIN_USER"
			readonly="true" class="readonly"
		/>
		<field name="comment_date" id="comment_date" type="date" size="30"
			readonly="true" label="COM_PREACHIT_ADMIN_DATE" format="%Y-%m-%d" filter="user_utc" class="readonly" />
			
		<field name="comment_text" id="comment_text" type="textarea"
			label="COM_PREACHIT_ADMIN_COMMENT" required="true"
			class="inputbox" rows="15" cols="80" filter="safehtml" />	
			
	</fieldset>
</form>
