<?xml version="1.0" encoding="utf-8"?>
	<!--
		Bible version edit XML
	-->
<form>
	<fieldset name="maininfo">
		<field name="id" type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			readonly="true"
		/>
		<field
			name="published"
			type="list"
			label="COM_PREACHIT_ADMIN_STATE"
			class="inputbox"
			size="1"
			default="" validate="options">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
			<option
				value="-2">JTRASH</option>
		</field>
		<field name="name" id="name" type="text" class="inputbox"
			size="50" required="true" maxlength="50" label="COM_PREACHIT_ADMIN_NAME" />
		 <field name="code" id="code" type="text" class="inputbox"
			size="20" maxlength="20" label="COM_PREACHIT_ADMIN_BIBLE_CODE" />

	</fieldset>
</form>
