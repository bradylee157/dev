<?xml version="1.0" encoding="utf-8"?>
	<!--
		Mediaplayer edit XML
	-->
<form>
	<fieldset name="maininfo">
		<field name="id" type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			readonly="true"
			required="true"
		/>
		<field
			name="published"
			type="list"
			label="COM_PREACHIT_ADMIN_STATE"
			class="inputbox"
			size="1"
			default="" validate="options">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
			<option
				value="-2">JTRASH</option>
		</field>
		<field name="playername" id="playername" type="text" class="inputbox"
			size="100" maxlength="250" label="COM_PREACHIT_ADMIN_NAME" required="true" />
			
		<field name="playertype" id="playertype" type="playertypelist" class="inputbox"
			label="COM_PREACHIT_ADMIN_TYPE" default="" />
		
		<field
			name="facebook"
			type="radio"
			label="COM_PREACHIT_ADMIN_MP_FACEBOOK"
			class="inputbox"
			size="1"
			default="0">
			<option
				value="1">JYES</option>
			<option
				value="0">JNO</option>
		</field>
		
		<field
			name="html5"
			type="radio"
			label="COM_PREACHIT_ADMIN_HTML5"
			class="inputbox"
			size="1"
			default="0">
			<option
				value="1">JYES</option>
			<option
				value="0">JNO</option>
		</field>
		
		<field
			name="runplugins"
			type="radio"
			label="COM_PREACHIT_ADMIN_RUN_PLUGINS"
			class="inputbox"
			size="1"
			default="0">
			<option
				value="1">JYES</option>
			<option
				value="0">JNO</option>
		</field>
		
		<field
			name="image"
			type="list"
			label="COM_PREACHIT_ADMIN_MP_IMAGE"
			class="inputbox"
			size="1"
			default="0">
			<option
				value="0">COM_PREACHIT_ADMIN_DD_NONE</option>
			<option
				value="1">COM_PREACHIT_ADMIN_DD_MESSAGE</option>
			<option
				value="2">COM_PREACHIT_ADMIN_DD_SERIES</option>
		</field>
		
		<field name="playerurl" id="playerurl" type="text" size="100" maxlength="250" 
		label="COM_PREACHIT_ADMIN_PLAYER_URL" />
			
		<field name="playercode" id="playercode" type="textarea" rows="15" cols="80" 
		label="COM_PREACHIT_ADMIN_PLAYER_CODE" />
		
		<field name="playerscript" id="playerscript" type="text" size="100" maxlength="250" 
		label="COM_PREACHIT_ADMIN_PLAYER_SCRIPT" />
			
	</fieldset>
</form>
