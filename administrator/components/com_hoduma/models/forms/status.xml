<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_hoduma/models/rules">

	<fieldset name="general">
		<field name="sname" type="text"
			label="COM_HODUMA_FORM_STATUS_FIELD_SNAME"
			description="COM_HODUMA_FORM_STATUS_FIELD_SNAME_DESC"
			size="60"
			required="true"
		/>
		<field name="status_id" type="text"
			label="COM_HODUMA_FORM_STATUS_FIELD_STATUSID"
			description="COM_HODUMA_FORM_STATUS_FIELD_STATUSID_DESC"
			size="10"
			required="true"
		/>
		<field name="fontcolor" type="text"
			label="COM_HODUMA_FORM_STATUS_FIELD_FONTCOLOR"
			description="COM_HODUMA_FORM_STATUS_FIELD_FONTCOLOR_DESC"
			size="12"
			required="false"
			default="#000000"
		/>
		<field name="id" type="hidden" />
	</fieldset>
	
	<fieldset name="editoptions">
		<field name="published" type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
		>
			<option value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
	
</form>