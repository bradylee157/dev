			type="department"
			default="0"
			label="COM_HODUMA_FORM_USER_FIELD_DEPARTMENT"
			description="COM_HODUMA_FORM_USER_FIELD_DEPARTMENT_DESC"
		/>
		<field
			name="viewreports"
			type="radio"
			default="0"
			label="COM_HODUMA_FORM_USER_FIELD_VIEWREPORTS"
			description="COM_HODUMA_FORM_USER_FIELD_VIEWREPORTS_DESC"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="id" type="hidden" />
	</fieldset>
	
	<fieldset name="editoptions">
		<field name="published" type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
		>
			<option value="1">JPUBLISHED</option>
			<option	value="0">JUNPUBLISHED</option>
		</field>
