			label="COM_HODUMA_FORM_USER_FIELD_PAGERADDRESS"
			description="COM_HODUMA_FORM_USER_FIELD_PAGERADDRESS_DESC"
			size="20"
		/>
		<field name="phonemobile" type="text"
			label="COM_HODUMA_FORM_USER_FIELD_PHONEMOBILE"
			description="COM_HODUMA_FORM_USER_FIELD_PHONEMOBILE_DESC"
			size="20"
		/>
		<field name="phonehome" type="text"
			label="COM_HODUMA_FORM_USER_FIELD_PHONEHOME"
			description="COM_HODUMA_FORM_USER_FIELD_PHONEHOME_DESC"
			size="20"
		/>
		<field name="location1" type="text"
			label="COM_HODUMA_FORM_USER_FIELD_LOCATION1"
